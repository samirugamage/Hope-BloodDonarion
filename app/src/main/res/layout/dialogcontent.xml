<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <TextView
                android:id="@+id/editpost"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="80dp"
                android:text="UPDATE YOUR POST" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ideditpostheading"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="40dp"
                android:hint="Post Heading"
                style="@style/TextInputLayout"
                android:padding="5dp"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editpostheadingtext"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/ideditpostdescription"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="10dp"
                android:hint="Post Description"
                style="@style/TextInputLayout"
                android:padding="5dp"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/editpostdescriptiontext"
                    android:importantForAutofill="no"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/postdescription">

                <Button
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_below="@+id/editpostheading"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/idpostupdatebtn"
                    android:background="@drawable/custom_button_back"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="Update" />

                <Button
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_below="@+id/editpostheading"
                    android:layout_marginEnd="28dp"
                    android:id="@+id/idpostbackbtn"
                    android:background="@drawable/custom_button_back"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="Cancle" />

            </LinearLayout>


</LinearLayout>




</ScrollView>